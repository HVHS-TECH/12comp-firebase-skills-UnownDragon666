{
    "rules": {
        "admins": {
            ".read": "auth.uid === root.child('admins').hasChild(auth.uid)",
            ".write": false
        },
        "users": {
            ".read": "auth != null",
            ".indexOn": "name",
            "*": {
                "name": {
                    ".indexOn": ".value"
                }
            },
            "$uid": {
                ".write": "$uid === auth.uid || auth.uid === root.child('admins').hasChild(auth.uid)"
            },
            ".write": false
        },
        "rand": {
            ".read": true,
            ".write": true
        },
        "numbers": {
            ".read": true,
            ".write": true
        },
        "scores": {
            ".read": true,
            ".write": true
        },
        ".read": "root.child('admins').val() === true",
        ".write": "root.child('admins').val() === true"
    }
}